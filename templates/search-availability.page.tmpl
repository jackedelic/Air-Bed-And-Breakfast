{{ define "js" }}
<script>
  async function popupDateInput({ title }) {
    const htmlInput = `
        <form method="POST">
            <div class="row" id="reservation-dates">
              <div class="col">
                <div class="mb-3">
                  <input
                    required
                    class="form-control"
                    name="start"
                    aria-describedby="dateHelp"
                    placeholder="Arrival date"
                  />
                </div>
              </div>
              <div class="col">
                <div class="mb-3">
                  <input
                    required
                    class="form-control"
                    name="end"
                    aria-describedby="dateHelp"
                    placeholder="Departure date"
                  />
                </div>
              </div>
            </div>
            <hr />
            <button type="submit" class="btn btn-primary">
              Search Availability
            </button>
          </form>
        `

    const { value: formValues } = await Swal.fire({
      title,
      icon: 'info',
      html: htmlInput,
      showCloseButton: true,
      showCancelButton: false,
      // focusConfirm: false,
      willOpen: () => {
        const rangeInputs = document.getElementById('reservation-dates')
        const datePicker = new DateRangePicker(rangeInputs, {
          format: 'dd-mm-yyyy'
        })
      },
      didOpen: () => {}
    })
  }
  popupDateInput({ title: 'Pick a date range' })
</script>
{{ end }}
