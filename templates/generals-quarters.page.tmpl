{{ template "base" .}}
{{ define "content" }}
<div class="generals-quarters">
  <div class="row">
    <div class="col">
      <img
        src="static/images/generals-quarters.webp"
        class="d-block w-100 img-fluid"
        alt="Drinking Coffee"
      />
    </div>
  </div>
  <div class="row">
    <div class="col text-center">
      <a id="search-availability" href="#!" class="btn btn-success"
        >Search Availability</a
      >
    </div>
  </div>
</div>
{{ end }}
{{ define "js" }}
<script>
  const htmlInput = `
            <form method="POST" action="/search-availability" id="reservation-dates">
                <div class="row">
                  <div class="col">
                    <div class="mb-3">
                      <input
                        required
                        class="form-control"
                        name="start"
                        aria-describedby="dateHelp"
                        placeholder="Arrival date"
                      />
                    </div>
                  </div>
                  <div class="col">
                    <div class="mb-3">
                      <input
                        required
                        class="form-control"
                        name="end"
                        aria-describedby="dateHelp"
                        placeholder="Departure date"
                      />
                    </div>
                  </div>
                  <input type="hidden" name="csrf_token" value="{{ .CSRFToken }}" />
                </div>
              </form>
            `
  async function callback(value) {
    document.forms['reservation-dates'].submit()
    console.log(start.value)
    console.log(end.value)
    console.log('value: ', value)
  }
  document
    .getElementById('search-availability')
    .addEventListener('click', () => {
      customAlertHtml({ title: 'Pick a date range', htmlInput, cb: callback })
    })
</script>
{{ end }}
